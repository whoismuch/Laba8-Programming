<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.ConnectionController">
   <center>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label fx:id="connect" alignment="CENTER" contentDisplay="CENTER" prefHeight="99.0" prefWidth="551.0" text="Установка соединения...">
               <font>
                  <Font size="36.0" />
               </font>
               <opaqueInsets>
                  <Insets left="5.0" right="5.0" />
               </opaqueInsets>
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="enterAddress" alignment="CENTER" contentDisplay="CENTER" prefHeight="62.0" prefWidth="551.0" text="Введите адрес">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="tf1" prefHeight="27.0" prefWidth="427.0" />
            <Label fx:id="enterPort" alignment="CENTER" contentDisplay="CENTER" prefHeight="62.0" prefWidth="505.0" text="Введите порт">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="tf2" prefHeight="27.0" prefWidth="468.0" />
            <Label fx:id="connectionResult" alignment="CENTER" prefHeight="46.0" prefWidth="432.0" textFill="#ff5100">
               <font>
                  <Font size="14.0" />
               </font>
               <padding>
                  <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
               </padding>
            </Label>
            <Button fx:id="buttonConnect" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onActionConnection" prefHeight="39.0" prefWidth="129.0" text="Подключиться">
               <padding>
                  <Insets right="5.0" />
               </padding>
            </Button>
         </children>
         <padding>
            <Insets bottom="30.0" left="50.0" right="50.0" top="15.0" />
         </padding>
      </VBox>
   </center>
   <top>
      <MenuButton fx:id="language" mnemonicParsing="false" prefHeight="27.0" prefWidth="153.0" text="Выберите язык" BorderPane.alignment="TOP_RIGHT">
        <items>
            <MenuItem mnemonicParsing="false" onAction="#onActionRussian" text="Русский" />
          <MenuItem mnemonicParsing="false" onAction="#onActionEstlane" text="Eestlane" />
          <MenuItem mnemonicParsing="false" onAction="#onActionCatala" text="Català" />
            <MenuItem mnemonicParsing="false" onAction="#onActionEnglish" text="English" />
        </items>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </MenuButton>
   </top>
</BorderPane>
